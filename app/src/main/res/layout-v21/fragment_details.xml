                <!--<RelativeLayout-->
                <!--android:id="@+id/details_comments_count"-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_margin="4dp"-->
                <!--android:layout_alignParentBottom="true"-->
